{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "noUnusedLocals": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "target": "es2015",
    "lib":[
      "es2016"
    ],
    "outDir": "dist",
    "declaration": true,
    "sourceMap": false
  },
  "include": [
    "src/**/*.ts",
    "types",
    "node"
  ],
  "exclude": [
    "node_modules"
  ]
}
